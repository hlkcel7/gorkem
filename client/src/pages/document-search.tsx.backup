    isLoading: settingsLoading, 
    saveUserSettings 
  } = useUserSettings();
  
  // enableAI ayarƒ±
  const [enableAI, setEnableAI] = useState<boolean>(settings?.enableAI ?? false);
  
  // Client-side filtering and sorting states
  const [clientFilters, setClientFilters] = useState({
