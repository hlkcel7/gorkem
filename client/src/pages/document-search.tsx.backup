      {/* Debug Panel - Sadece geli≈ütirme i√ßin */}
      {SHOW_DEBUG_PANEL && (
        <Card className="border-blue-200 bg-blue-50">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm text-blue-800">üîß Debug Bilgileri</CardTitle>
          </CardHeader>
          <CardContent className="space-y-2 text-xs text-blue-700">
            <div><strong>App Config:</strong> {(window as any).__APP_CONFIG__ ? 'Y√ºklendi' : 'Y√ºklenemedi'}</div>
            <div><strong>Supabase URL:</strong> {configs.supabase.url || 'Bo≈ü'}</div>
            <div><strong>Supabase Key:</strong> {configs.supabase.anonKey ? `${configs.supabase.anonKey.substring(0, 20)}...` : 'Bo≈ü'}</div>
            <div><strong>DeepSeek Key:</strong> {configs.deepseek.apiKey || 'Bo≈ü'}</div>
            <div><strong>OpenAI Key:</strong> {configs.openai.apiKey || 'Bo≈ü'}</div>
            <div><strong>Baƒülantƒ± Durumlarƒ±:</strong> Supabase: {connectionState.supabase}, DeepSeek: {connectionState.deepseek}, OpenAI: {connectionState.openai}</div>
            <div><strong>Toplam Dok√ºman:</strong> {stats.totalDocuments}</div>
            <div><strong>Son Sorgu:</strong> {lastQuery || 'Hen√ºz arama yapƒ±lmadƒ±'}</div>
