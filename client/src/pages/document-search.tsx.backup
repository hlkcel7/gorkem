export default function DocumentSearchPage() {
  const {
    // State
    isLoading,
    supabaseResults,
    searchDecision,
    queryEnhancement,
    searchMethod,
    aiAnalysis,
    error,
    lastQuery,
    stats,
    connectionState,
    availableOptions,
    
    // Actions
